{
  "name": "px4-sim-suite",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
  "updateContentCommand": "git submodule update --init --recursive",
  "postCreateCommand": "cd /workspaces/${localWorkspaceFolderBasename} && python3 tools/env_requirements.py install && cd /workspaces/${localWorkspaceFolderBasename}/px4 && bash Tools/setup/ubuntu.sh --no-nuttx",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": ["ms-vscode.cpptools", "ms-python.python"]
    }
  }
}
